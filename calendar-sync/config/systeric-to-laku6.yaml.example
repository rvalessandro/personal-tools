# CalendarSync Configuration: Systeric -> Laku6
# Copy this file to systeric-to-laku6.yaml and fill in your values
#
# IMPORTANT: Use Desktop app OAuth credentials (not Web application)
# See README.md for setup instructions
#
# Documentation: https://github.com/inovex/CalendarSync

sync:
  start:
    identifier: MonthStart
    offset: 0
  end:
    identifier: MonthEnd
    offset: 0

# Source: Systeric calendar
source:
  adapter:
    type: google
    calendar: "andro@systeric.com"
    oAuth:
      clientId: "YOUR_CLIENT_ID.apps.googleusercontent.com"
      clientKey: "YOUR_CLIENT_SECRET"

# Sink: Laku6 calendar (where blocker events will be created)
sink:
  adapter:
    type: google
    calendar: "andro@laku6.com"
    oAuth:
      clientId: "YOUR_CLIENT_ID.apps.googleusercontent.com"
      clientKey: "YOUR_CLIENT_SECRET"

transformations:
  - name: ReplaceTitle
    config:
      NewTitle: "Busy (Synced)"

filters:
  - name: DeclinedEvents

storage:
  path: "./data/auth-storage.yaml"
